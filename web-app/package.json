{
  "name": "kafka-manager",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "lint": "tslint ./src/**/*.ts*",
    "lint:fix": "tslint ./src/**/**/**/**/*.ts* --fix",
    "test": "vitest run",
    "prettier": "prettier --write \"src/**/*.{ts,tsx,less,css,js,jsx}\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "tslint --fix"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@microlink/react-json-view": "^1.26.2",
    "@navikt/ds-css": "^7.30.1",
    "@navikt/ds-react": "^7.30.1",
    "@navikt/ds-tokens": "^7.30.1",
    "@navikt/fnrvalidator": "^2.1.5",
    "axios": "^1.12.0",
    "classnames": "^2.3.1",
    "constate": "^3.1.0",
    "dayjs": "^1.10.4",
    "lodash.throttle": "^4.1.1",
    "prop-types": "^15.7.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-toastify": "^7.0.3"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.11",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/react-modal": "^3.16.0",
    "@vitejs/plugin-react": "^5.0.3",
    "husky": "^4.3.5",
    "lint-staged": "^16.2.0",
    "msw": "^2.7.3",
    "prettier": "^3.6.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^5.0.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vitest": "^3.0.9"
  },
  "msw": {
    "workerDirectory": "public"
  }
}
